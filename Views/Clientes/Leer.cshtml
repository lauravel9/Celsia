<center> 
<br>
<div style="width: 50%; ">
    <h1>Clientes</h1>
<br>

</center>
<br>

<div class="container">
    <div class="row">
        <div class="col-md-2">
            <br>
            <div>
                <button><a style="text-decoration: none; color:#000000;" asp-area="" asp-controller="Clientes" asp-action="Crear">Crear Cliente</a></button>
            </div>
                <br><br>
            <div>
                <button><a style="text-decoration: none; color: #000000;" asp-area="" asp-controller="Clientes" asp-action="Leer">Listado de Clientes</a></button>
            </div>
        </div>

        <div class="col-md-9 ms-5">
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <td>ID</td>
                        <td>Nombre</td>
                        <td>Identificacion</td>
                        <td>Direccion</td>
                        <td>Telefono</td>
                        <td>Correo electronico</td>
                        <td></td>
                    </tr>
                </thead>

            @foreach (var Clientes in Model){
                <tr>
                    <td>@Clientes.IdCliente</td>
                    <td>@Clientes.Nombre</td>
                    <td>@Clientes.Identificacion</td>
                    <td>@Clientes.Direccion</td>
                    <td>@Clientes.Telefono</td>
                    <td>@Clientes.CorreoElectronico</td>
                    <td>
                        <a class="btn btn2" asp-controller="Clientes" asp-action="Actualizar" asp-route-id="@Clientes.IdCliente">Editar</a> 
                        <a class="btn btn1" asp-controller="Clientes" asp-action="Eliminar" asp-route-id="@Clientes.IdCliente">Eliminar</a>
                    </td>
                </tr>
                }
            </table>
        </div>
    </div>
</div>


